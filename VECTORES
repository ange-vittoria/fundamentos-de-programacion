    cin >> n;

    vector<double> vec(n); 

    cout << "Ingrese los elementos del vector:\n";
    for(int i = 0; i < n; i++) {
        cin >> vec[i];
    }

    double minValor = vec[0]; 
    for(int i = 1; i < n; i++) {
        if(vec[i] < minValor) {
            minValor = vec[i];
