PREGUNTA 1
#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del vector: ";
    cin >> n;

    vector<double> vec(n); // Usamos double para poder ingresar enteros o reales

    cout << "Ingrese los elementos del vector:\n";
    for(int i = 0; i < n; i++) {
        cin >> vec[i];
    }

    double maxValor = vec[0]; // Inicializamos con el primer elemento
    for(int i = 1; i < n; i++) {
        if(vec[i] > maxValor) {
            maxValor = vec[i];
        }
    }

    cout << "El valor máximo del vector es: " << maxValor << endl;

    return 0;
}
